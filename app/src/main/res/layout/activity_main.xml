<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvResult2"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:ellipsize="start"
        android:gravity="end"
        android:singleLine="true"
        android:textColor="@color/numberButton"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:ellipsize="end"
        android:gravity="end"
        android:singleLine="true"
        android:textColor="@color/numberButton"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tvFloor"
                style="@style/ActionButtonStyle"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="FLR" />

            <TextView
                android:id="@+id/tvAkar"
                style="@style/ActionButtonStyle"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="√" />

            <TextView
                android:id="@+id/tvKuadrat2"
                style="@style/ActionButtonStyle"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="x²" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvClear"
                style="@style/ActionButtonStyle"
                android:textSize="25sp"
                android:textStyle="bold"
                android:text="@string/ce" />

            <TextView
                android:id="@+id/tvRound"
                style="@style/ActionButtonStyle"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="RND" />

            <TextView
                android:id="@+id/tvCeiling"
                style="@style/ActionButtonStyle"
                android:textStyle="bold"
                android:textSize="15sp"
                android:text="CLNG" />


            <TextView
                android:id="@+id/tvDivide"
                style="@style/ActionButtonStyle"
                android:textStyle="bold"
                android:textSize="35sp"
                android:text="÷" />




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTujuh"
                style="@style/NumberButtonStyle"
                android:textSize="25sp"
                android:text="7" />

            <TextView
                android:id="@+id/tvDelapan"
                style="@style/NumberButtonStyle"
                android:textSize="25sp"
                android:text="8" />

            <TextView
                android:id="@+id/tvSembilan"
                style="@style/NumberButtonStyle"
                android:textSize="25sp"
                android:text="9" />

            <TextView
                android:id="@+id/tvKali"
                style="@style/ActionButtonStyle"
                android:textSize="25sp"
                android:textStyle="bold"
                android:text="X" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tvEmpat"
                style="@style/NumberButtonStyle"
                android:textSize="25sp"
                android:text="4" />

            <TextView
                android:id="@+id/tvLima"
                style="@style/NumberButtonStyle"
                android:textSize="25sp"
                android:text="5" />

            <TextView
                android:id="@+id/tvEnam"
                style="@style/NumberButtonStyle"
                android:textSize="25sp"
                android:text="6" />

            <TextView
                android:id="@+id/tvKurang"
                style="@style/ActionButtonStyle"
                android:textSize="25sp"
                android:textStyle="bold"
                android:text="-" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tvSatu"
                style="@style/NumberButtonStyle"
                android:textSize="25sp"
                android:text="1" />

            <TextView
                android:id="@+id/tvDua"
                style="@style/NumberButtonStyle"
                android:textSize="25sp"
                android:text="2" />

            <TextView
                android:id="@+id/tvTiga"
                style="@style/NumberButtonStyle"
                android:textSize="25sp"
                android:text="3" />

            <TextView
                android:id="@+id/tvTambah"
                style="@style/ActionButtonStyle"
                android:textSize="25sp"
                android:textStyle="bold"
                android:text="+" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDot"
                style="@style/NumberButtonStyle"
                android:textSize="25sp"
                android:text="." />

            <TextView
                android:id="@+id/tvNol"
                style="@style/NumberButtonStyle"
                android:textSize="25sp"
                android:text="0" />

            <TextView
                android:id="@+id/tvBack"
                style="@style/ActionButtonStyle"
                android:textSize="25sp"
                android:scaleType="center"
                android:textStyle="bold"
                android:text="DEL"/>

            <TextView
                android:id="@+id/tvSamaDgn"
                style="@style/ActionButtonStyle"
                android:textSize="25sp"
                android:textStyle="bold"
                android:text="=" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>